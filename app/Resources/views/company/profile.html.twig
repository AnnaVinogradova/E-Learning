{% extends 'base.html.twig' %}

{% block body %}
    <div class="row company-profile">
        <div class="col-md-4">
            <img src="/images/company_logo/{{ company.logo }}" alt="">
        </div>
        <div class="col-md-8">
            <div class="title">{{ company.name }}</div>
            <div class="row">
                <div class="user-info col-md-4">
                    Username: <span>{{ user.username }}</span><br>
                    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default">
                        Edit user profile
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </a>
                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-warning pull-right">Log out</a>
                </div>
                <div class="company-info col-md-offset-1 col-md-5">
                    Company name: <span>{{ company.name }}</span><br>
                    Company site: <span>{{ company.site }}</span><br>
                    Company logo: <span>{% if company.logo == 'default.jpg' %}default{% else %}custom{% endif %}</span>
                    <a href="{{ path('company_edit', {id: company.id}) }}" class="btn btn-default pull-right">
                        Edit company info
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                </div>
            </div>
            <div class="row manage-info">
                <div class="col-md-8">
                    <span class="glyphicon glyphicon-list-alt"></span>
                    Count of news: <a class="badge" href="{{ path('news_index') }}">{{ company.news|length }}</a>;
                    <a href="{{ path('news_new') }}" class="btn btn-link">Add news</a><br>

                    <span class="glyphicon glyphicon-book"></span>
                    Count of courses: <a href="{{ path('course_index') }}" class="badge">{{ company.courses|length }}</a>;
                    <a href="{{ path('course_new') }}" class="btn btn-link">Create new course</a><br>
                    <span class="glyphicon glyphicon-briefcase"></span>

                    Count of vacancies: <a href="{{ path('vacancy_index') }}" class="badge">{{ company.vacancies|length }}</a>;
                    <a href="{{ path('vacancy_new') }}" class="btn btn-link">Add new vacancy</a><br>

                    <span class="glyphicon glyphicon-flag"></span>
                    Sertificate requests: <a href="{{ path('course_index') }}" class="badge">1</a>
                </div>
                <div class="col-md-4">
                    <a href="{{ path("invite_teacher") }}" class="btn btn-success manage-teachers">
                    <span class="glyphicon glyphicon-wrench"></span>
                    Manage teachers</a>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}