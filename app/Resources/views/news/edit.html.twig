{% extends 'base.html.twig' %}

{% block body %}
    <div class="row crud-section">
        <h1>News edit</h1>
        <div class="row">
            <a class="col-md-offset-1 btn btn-link" href="{{ path('news_index') }}">Back to the list</a>
        </div>
        <div class="row">
            {{ form_start(edit_form, { 'attr': {'class': 'col-md-offset-1 col-md-8'} }) }}
                <div class="form-group">
                    <label>News title</label>
                    {{ form_widget(edit_form.title, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label>Content</label>
                    {{ form_widget(edit_form.content, { 'attr': {'class': 'form-control'} }) }}
                </div>
            <input class="btn btn-info col-md-1" type="submit" value="Edit">
            {{ form_end(edit_form) }}
        </div>
        <div class="row"></div>
    </div>
{% endblock %}
