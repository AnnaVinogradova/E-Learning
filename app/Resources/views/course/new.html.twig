{% extends 'base.html.twig' %}

{% block body %}
    <div class="row crud-section">
        <h1>Course creation</h1>
        <div class="row">
            <a class="col-md-offset-1 btn btn-link" href="{{ path('course_index') }}">Back to the list</a>
        </div>
        <div class="row">
            {{ form_start(form, { 'attr': {'class': 'col-md-offset-1 col-md-8'} }) }}
            <div class="form-group">
                <label>Course title</label>
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label>Course img</label>
                {{ form_widget(form.img) }}
            </div>
            <div class="form-group">
                <label>Price</label>
                {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label>Description</label>
                {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label>Duration</label>
                {{ form_widget(form.duration, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <input class="btn btn-info col-md-1" type="submit" value="Create">
            {{ form_end(form) }}
        </div>
        <div class="row"></div>
    </div>
    </div>
{% endblock %}