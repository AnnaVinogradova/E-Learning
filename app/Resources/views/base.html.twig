<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html"; charset=utf-8" />
    <title>{% block title %}Online learning{% endblock %} - E-Learning</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
</head>
<body>
    <section class="container-fluid">
        <div class="row">
            {% block navigation %}
                <nav role="navigation" class="navbar navbar-default">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                            <span class="sr-only">Navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a href="{{ path('portal_homepage') }}" class="navbar-brand">E-Learning</a>
                    </div>
                    <!-- Collection of nav links, forms, and other content for toggling -->
                    <div id="navbarCollapse" class="collapse navbar-collapse">
                        <ul class="nav navbar-nav  navbar-right">
                            <li>
                                <a href="{{ path('portal_about') }}">
                                    About
                                </a>
                            </li>
                            <li>
                                {% if is_granted("ROLE_USER") %}
                                    <a href="{{ path('portal_profile') }}">
                                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                                        Home
                                    </a>
                                {% else %}
                                    <a href="{{ path('fos_user_security_login') }}">
                                        <span class="glyphicon glyphicon-lock" aria-hidden="true"></span>
                                        Login
                                    </a>
                                {% endif %}
                            </li>
                        </ul>
                    </div>
                </nav>
            {% endblock %}
        </div>

        {% block body %}{% endblock %}

        <div id="footer" class="row">
            {% block footer %}
                <div class="col-md-3">
                    <ul>
                        {% if not is_granted("ROLE_USER") %}
                            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                            <li><a href="{{ path('registration_cases') }}">Sign up</a></li>
                        {% endif %}
                        <li><a href="">Categories</a></li>
                        <li><a href="{{ path('company_index') }}">Companies</a></li>
                        <li><a href="{{ path('news_index') }}">News</a></li>
                        <li><a href="{{ path('vacancy_index') }}">Vacancies</a></li>
                    </ul>
                </div>
                <div class="col-md-4 copyright">
                    &copy; Vinogradova Anna, 2017
                </div>
                <div class="col-md-offset-7 col-md-2">
                    <span>E-Learning</span>
                </div>
            {% endblock %}
        </div>
    </section>

    {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>
</html>