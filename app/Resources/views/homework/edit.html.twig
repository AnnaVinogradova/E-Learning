{% extends 'base.html.twig' %}

{% block body %}
    <div class="row crud-section">
        <h1>Edit Homework</h1>
        <div class="flow-creation">
            {{ form_start(edit_form) }}
            <div class="form-group">
                <label>Name</label>
                {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                <label>Content</label>
                {{ form_widget(edit_form.content) }}
            </div>
            <input class="btn btn-info col-md-1" type="submit" value="Edit">
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
